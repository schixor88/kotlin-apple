<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_marginBottom="6dp"
        android:elevation="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="8dp"
                android:background="@drawable/background_rounded"
                android:backgroundTint="@color/btn_login_twitter_pressed"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_dentist_2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_marginTop="16dp"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Dr. Gaurav Acharya"
                android:textColor="@color/common_blue_bg"
                android:textSize="19sp"
                app:layout_constraintLeft_toRightOf="@+id/img"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:textColor="@color/pink_pressed"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/nunito_regular"
                app:layout_constraintTop_toBottomOf="@id/name"
                app:layout_constraintLeft_toLeftOf="@id/name"
                android:id="@+id/nmc"
                android:text="NMC No: 10599"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="13sp"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/nunito_light"
                app:layout_constraintTop_toTopOf="@id/nmc"
                app:layout_constraintLeft_toRightOf="@id/nmc"
                android:id="@+id/degree"
                android:text="MDS (TU)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:maxWidth="250dp"
                android:id="@+id/position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/nunito_semibold"
                android:maxLines="2"
                android:text="Orthodontics And Dentofacial Orthopedics"
                android:textColor="@color/green1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/nmc"
                app:layout_constraintTop_toBottomOf="@id/nmc" />






        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.cardview.widget.CardView>

</LinearLayout>